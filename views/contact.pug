extends base.pug
block style 
    style 
        include ../static/style.css 
        include ../static/stylecontact.css 
block content 
    h1#heading Fill the details and get a call back
    form(action= "/contact", method= "post", id="container")
        <input type="text"  class= "myinput" name="name" placeholder="Enter your name..">
        <input type="phone" class= "myinput" name="phone" placeholder="Enter your phone number" pattern="[1-9]{1}[0-9]{9}">
        <input type="email" class= "myinput" name="email" placeholder="Enter your email..">
        div.myinput-radio
            <input type="radio" class= "rb rb1" name="gender" value="Male">&nbsp&nbsp Male
            <input type="radio" class= "rb rb2" name="gender" value="Female">&nbsp&nbsp Female
        select#Course-list.myinput(name="course") 
            option(value="System Analysis") System Analysis 
            option(value="Business Analytic") Business Analytic
            option(value="Artificial Intelligence") Artificial Intelligence
            option(value="Data Science") Data Science
            option(value="Cyber Security") Cyber Security
            option(value="Digital marketing") Digital marketing
            option(value="Crypto Protocol") Crypto Protocol
            option(value="Business Statistics") Business Statistics
            option(value="System Design") System Design
        <input type="pin"  class= "myinput" name="pin" placeholder="Enter your area pincode..">
        <textarea type="text"  class= "myinput address" name="address" placeholder="Enter your address.."></textarea>
        button#btn 
            | submit 