extends base.pug
block style 
    style 
        include ../static/style.css 
        include ../static/stylecontact.css 
block content 
    h1#heading Contact Us
    form(action= "/contact", method= "post", id="container")
        <input type="text"  class= "myinput" name="name" placeholder="Enter your name..">
        <input type="phone" class= "myinput" name="phone" placeholder="Enter your phone number">
        <input type="email" class= "myinput" name="email" placeholder="Enter your email..">
        <input type="pin"  class= "myinput" name="pin" placeholder="Enter your area pincode..">
        <textarea type="text"  class= "myinput address" name="firstname" placeholder="Enter your address.."></textarea>
        button#btn 
            | submit 